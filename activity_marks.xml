<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".MarksActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ADCEAD"
        android:orientation="horizontal"
        android:paddingTop="14dp"
        android:paddingBottom="14dp">

        <LinearLayout
            android:id="@+id/toolbarAux3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:background="#ADCEAD"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/BackArrow3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/abc_vector_test" />



            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="17dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:text="@string/note"
                android:textColor="@color/White"
                android:textSize="15sp" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/addMarkBtn"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                app:srcCompat="@drawable/add_mark"
                android:layout_centerVertical="true"/>

            <ImageView
                android:id="@+id/deleteAllMarkBtn"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginEnd="20dp"
                android:layout_toStartOf="@+id/addMarkBtn"
                app:srcCompat="@drawable/delete_mark" />
        </RelativeLayout>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <GridView
                android:id="@+id/MarksGridView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:numColumns="2"
                android:layout_marginTop="25dp"
                android:horizontalSpacing="20dp"
                android:verticalSpacing="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp">

            </GridView>

        </LinearLayout>

</LinearLayout>